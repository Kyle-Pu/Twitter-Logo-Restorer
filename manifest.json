{
  "manifest_version": 3,
  "name": "Bring Back Blissful Blue Bird",
  "version": "1.0",
  "description": "Restore Twitter's logo - we love the blue bird!",
  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "images/icon.png",
        "images/icon.svg",
        "images/icon.ico"
      ],
      "matches": [
        "https://twitter.com/*"
      ]
    }
  ],
  "permissions": [
    "tabs"
  ],
  "host_permissions": [
    "https://twitter.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
